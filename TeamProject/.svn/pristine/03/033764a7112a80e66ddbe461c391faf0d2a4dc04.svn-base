<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<script src="${pageContext.servletContext.contextPath}/resources/js/jquery.min.js"></script>
	<script>
		$(function(){
		  	var pull=$('#pull');
		  	    menu=$('header ul');
		  	    menuHeight=menu.height();
		  	    logo = $('#logo');
		  $(pull).on('click', function(e){
		  	e.preventDefault();
		  	$('#logo').remove();
		  	menu.slideToggle();
		  });
		    $(window).resize(function(){
		    	var w=$(window).width();
		    	if(w>600 && menu.is(':hidden')){
		    		menu.removeAttr('style');
		    		$('header ul').prepend(logo);
		    	}
		    });
		});
	</script>
	<style>
		body{
			margin: 0;
		}
		header{
			height: 66px;
			width: 100%;
			background: #0054ff;
			font-size: 11pt;
			font-weight: bold;
			position: relative;
		}
		.header_nav:before, .header_nav:after{
			content:"";, display: table;
		}
		.header_nav:after{
			clear:both;
		}
		.header_nav{
			*zoom:1;
		}
		header ul{
			display:table;
			padding: 0 0 0 25px;
			width: 600px;
			height: 40px;
			margin-top:0px;
	
		}
		header ul li:nth-child(1){
				margin-left:20px;
		}
		header li{
			display: inline;
			float: left;
			margin-top: 10px;
		}
		header a{
			color: #fff;
			display: inline-block;
			width: 100px;
			text-align: center;
			text-decoration: none;
			line-height: 40px;
		}
		header li:last-child a{
			border-right: 0;
		}
		header a#pull{
			display: none;
			padding-top:10px;
		}
		@media only screen and (max-width : 600px) {
			header {
				border-bottom: 0;
				height: auto;
			}
			header ul {
				display: none;
				height: auto;
			}
			header ul li:nth-child(1){
				margin-top:0px;
			}
			header a {
			  	text-align: left;
			  	width: 100%;
			  	text-indent: 25px;
		  	}
			header a#pull {
				display: block;
				width: 100%;
				position: relative;
			}
			header a#pull:after {
				content:"";
				background: url('${pageContext.servletContext.contextPath}/resources/image/nav-icon.png') no-repeat;
				width: 30px;
				height: 30px;
				display: inline-block;
				position: absolute;
				right: 15px;
				top: 20px;
			}
			header li {
				display: block;
				float: none;
				width: 100%;
			}
		}
	</style>
	<header class="header_nav">
	    <ul class="header_nav">
	       <li id="logo"><a href="#"><img src="${pageContext.servletContext.contextPath}/resources/image/logo.png"></a></li>
	       <li><a href="#">홈</a></li>
	       <li><a href="#">예약안내</a></li>
	       <li><a href="#">회의실예약</a></li>
	       <li><a href="#">교육실예약</a></li>
	    </ul>
	    <a id="pull" href="#"><img src="${pageContext.servletContext.contextPath}/resources/image/logo.png"></a>
	</header>
